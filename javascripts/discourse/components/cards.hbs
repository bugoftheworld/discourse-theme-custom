<div class="q-container">
  <div>
    <ul class="cards-content card-type">
        {{t "theme_translations.discourse_theme_custom.qnap_content.cards.item1.title"}}
      {{#each cards as |card|}}
        <li>
          <div>
            <div>
              <a href="{{card.url}}" target="{{card.target}}">
                <figure>
                    <div class="icon {{card.icon}}"></div></figure>
                <h3>{{card.title}}</h3>
                <p>{{card.description}}</p>
              </a>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>