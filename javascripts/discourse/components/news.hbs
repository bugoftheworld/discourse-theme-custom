<div class="q-container">
  <div>
    <h2>What’s New</h2>
    <ul class="news-content card-type">
      {{#each news as |new|}}
        <li>
          <div>
            <div class="new">
              <figure>
                <img src="{{new.image_url}}" alt="{{new.title}}" />
              </figure>
              <div class="texts">
                <h3>{{new.title}}</h3>
              </div>
                <a href="https://www.qnap.com{{new.url}}" target="_blank">Learn More ⟩</a>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>